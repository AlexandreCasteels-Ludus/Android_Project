<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        >


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Beer name"
            android:textColor="@color/black"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/type"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/degrees"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Type" />

        <TextView
            android:id="@+id/degrees"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="xÂ°"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/brewery"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/degrees"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/type"
            android:text="TextView" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/containerType"
            android:textColor="@color/black"
            android:layout_below="@id/image"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Drunk in a 33cl bottle" />

        <EditText
            android:id="@+id/date"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_below="@id/containerType"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/commentary"
            android:textColor="@color/black"
            android:layout_below="@id/date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullam" />

        <RatingBar
            android:id="@+id/rating"
            android:textColor="@color/black"
            android:layout_below="@id/commentary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:backgroundTint="#FF0000"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/rating"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/button"
            android:textColor="@color/black"
            android:layout_width="113dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/mapView"
            android:text="Edit location"
            android:textSize="10dp" />

    </RelativeLayout>
    </ScrollView>


</RelativeLayout>